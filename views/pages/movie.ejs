<html>
	<%- include head.ejs %>
	<body>
		<%- include nav.ejs %>
		<div class="container">
			<div class="col-md-12">
				<h2><%= movie.title %></h2>
				<div class="media">
				  <img class="media-object" src="/movies/poster/<%= movie.id %>" alt="<%= movie.title %>">
				</div>
				<table class="table table-bordered table-stripped">
			    	<tbody>
			    		<tr><td>Title</td><td><%= movie.title %></td></tr>
			    		<tr><td>Director</td><td><%= movie.director %></td></tr>
			    		<tr><td>Release Year</td><td><%= movie.releaseYear %></td></tr>
			    		<tr><td>Genre</td><td><%= movie.genre %></td></tr>
			    	</tbody>
			    </table>
			    <a href="/movies" class="btn btn-info"><span class="glyphicon glyphicon-arrow-left"></span> Back</a>
			</div>
		</div>
	</body>
	<script href="/bower_components/jquery/dist/jquery.min.js"></script>
	<script href="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</html>